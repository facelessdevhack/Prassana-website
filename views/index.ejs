      function addChar(input, character) {
  if (input.value == null || input.value == "0") input.value = character;
  else input.value += character;
}

function cos(form) {
  form.display.value = Math.cos(form.display.value);
}

function sin(form) {
  form.display.value = Math.sin(form.display.value);
}
function pow(form) {
  form.display.value = Math.pow(form.display.value);
}

function log(form) {
  form.display.value =
    Math.log(form.display.value) + Math.log(form.display.value);
}

function log(form) {
  form.display.value = Math.log(form.display.value);
}

function log10(form) {
  form.display.value = Math.log10(form.display.value);
}

